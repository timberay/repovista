# Docker Registry Configuration
REGISTRY_URL=https://registry.example.com
REGISTRY_USERNAME=readonly_user
REGISTRY_PASSWORD=your_secure_password

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
FRONTEND_PORT=80

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:8000

# Application Settings
APP_NAME=RepoVista
APP_ENV=production
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache Settings (in seconds)
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Request Limits
MAX_REPOS_PER_PAGE=100
DEFAULT_PAGE_SIZE=20

# Timeouts (in seconds)
REGISTRY_TIMEOUT=30
REQUEST_TIMEOUT=60

# Optional: Proxy Configuration (if behind corporate proxy)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1,backend,frontend
